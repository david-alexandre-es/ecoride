<div class="flex justify-center interligne30 h30 fs12">
    <div class="bc-beige p0-20 onglet actif" data-hide="formulaire" data-open="form_login" data-replace="actif bc-beige|curseur">
        Connectez-vous
    </div>
    <div class="p0-20 onglet curseur" data-hide="formulaire" data-open="form_inscription" data-replace="actif bc-beige|curseur">
        Inscrivez-vous
    </div>
</div>
<div class="bc-beige p40 table mlr-auto">
    <form action="/ecoride/ajax.php" method="POST" class="formulaire" id="form_login">
        <input type="hidden" name="controller" value="user">
        <input type="hidden" name="method" value="showUserFromLogin">
        {# Champs cachés pour la redirection après connexion #}
        {% if redirect_to is defined and redirect_to %}
            <input type="hidden" name="redirect_to" value="{{ redirect_to }}">
        {% endif %}
        {% if covoiturage_id is defined and covoiturage_id %}
            <input type="hidden" name="covoiturage_id" value="{{ covoiturage_id }}">
        {% endif %}
        {% if nb_place is defined and nb_place %}
            <input type="hidden" name="nb_place" value="{{ nb_place }}">
        {% endif %}
        <div class="input">
            <input type="text" name="login" value="" required placeholder=" ">
            <label>Votre login</label>
        </div>
        <div class="mt30 input">
            <input type="password" name="password" value="" required placeholder=" ">
            <label>Votre Mot de passe</label>
        </div>
        <button type="submit" class="w100p center mt30 interligne40 h40 bc-vert blanc p0-20 br20">Continuer</button>
    </form>
    <form action="/ecoride/ajax.php" method="POST" class="formulaire none" id="form_inscription">
        <input type="hidden" name="controller" value="user">
        <input type="hidden" name="method" value="insertUser">

        {# Champs cachés pour la redirection après connexion #}
        {% if redirect_to is defined and redirect_to %}
            <input type="hidden" name="redirect_to" value="{{ redirect_to }}">
        {% endif %}
        {% if covoiturage_id is defined and covoiturage_id %}
            <input type="hidden" name="covoiturage_id" value="{{ covoiturage_id }}">
        {% endif %}
        {% if nb_place is defined and nb_place %}
            <input type="hidden" name="nb_place" value="{{ nb_place }}">
        {% endif %}

        <div class=" input">
            <input type="text" name="data[prenom]" value="" required placeholder=" ">
            <label>Votre Prenom *</label>
        </div>
        <div class="mt30 input">
            <input type="text" name="data[nom]" value="" required placeholder=" ">
            <label>Votre Nom *</label>
        </div>
        <div class="mt30 input">
            <input type="email" name="data[email]" value="" required placeholder=" ">
            <label>Votre Email *</label>
        </div>
        <div class="mt30 input">
            <input type="tel" name="data[telephone]" value="" required placeholder=" ">
            <label>Votre Telephone *</label>
        </div>
        <div class="mt30 input">
            <input type="date" name="data[date_naissance]" value="" required placeholder=" ">
            <label>Votre Date de naissance *</label>
        </div>
        <div class="mt30 input">
            <input type="text" name="data[pseudo]" value="" required placeholder=" ">
            <label>Votre login *</label>
        </div>
        <div class="mt30 input">
            <input type="password" name="data[password]" value="" required placeholder=" ">
            <label>Votre Mot de passe *</label>
        </div>
        <button type="submit" class="w100p center mt30 interligne40 h40 bc-vert blanc p0-20 br20">S'inscrire</button>
        <div class="mt10 center fs11">* Champ obligatoire</div>
    </form>
</div>
