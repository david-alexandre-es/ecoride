# Configuration de la base de données
# ⚠️ SECURITE : Changez ces identifiants en production !
DB_HOST=db
DB_NAME=ecoride_covoiturage
DB_USER=root
DB_PASSWORD=root_password
DB_PORT=3306

# Configuration de l'application
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE=Europe/Paris

# Configuration des sessions
SESSION_NAME=ECORIDE_SESSION
SESSION_TIMEOUT=3600
SESSION_SECURE=false
SESSION_HTTPONLY=true

# Configuration des uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif
UPLOAD_PATH=/uploads/

# Configuration de la pagination
PAGINATION_PER_PAGE=10
PAGINATION_MAX_PER_PAGE=100

# Configuration du covoiturage
COVOITURAGE_MAX_PLACES=8
COVOITURAGE_MAX_PRICE=100
COVOITURAGE_MIN_PRICE=0
COVOITURAGE_MAX_DISTANCE_KM=1000

# Configuration de la validation
VALIDATION_MIN_PSEUDO_LENGTH=3
VALIDATION_MIN_PASSWORD_LENGTH=6
VALIDATION_MAX_NAME_LENGTH=50

# Configuration du cache
CACHE_TTL=3600
CACHE_ENABLED=true
CACHE_PATH=/cache/

# Configuration des APIs externes
API_OSRM_URL=http://router.project-osrm.org/route/v1/driving/
API_NOMINATIM_URL=https://nominatim.openstreetmap.org/search
API_TIMEOUT=5

# Configuration des emails (optionnel)
MAIL_ENABLED=false
MAIL_SMTP_HOST=localhost
MAIL_SMTP_PORT=587
MAIL_FROM_EMAIL=noreply@ecoride.com
MAIL_FROM_NAME=EcoRide
